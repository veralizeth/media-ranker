<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="app-header__header">
   <%# ======= TITLE ========= %>
    <h1>
      <a href="/">Media Ranker</a>
      <small>Ranking the Best of Everything</small>
    </h1>
    <%# ======= NAVBAR ========= %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light app-header__nav">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item active">
            <a class="nav-link" href="<%= root_path %>">View top media<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= works_path %>">View all media<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= new_work_path %>">Add a new work<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= users_path %>">View all users<span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </div>
    <%# ======= LOGIN AND LOGOUT BUTTONS ========= %>
    <%if session[:user_id]%>
      <ul class="nav app-header__user-nav-container">
        <li class= "nav-item app-header__nav_item"><%=link_to "Logged in as #{session[:username]}", current_user_path(session[:user_id]), :class => "btn btn-primary"%></li>
        <li class= "nav-item app-header__nav_item"><%=link_to "Log out", logout_path, :class => "btn btn-primary", :method => :delete %></li>
      </ul>
      <%elsif session[:id] == nil%>
      <ul class="nav app-header__user-nav-container">
        <%# <li class= "nav-item app-header__nav_item"><%=link_to "Log In", login_path, :class => "btn btn-primary"%>
        <li class= "nav-item app-header__nav_item"><%= link_to "Login with GitHub", github_login_path, :class => "btn btn-primary" %></li>
      </ul>
    <%end%>

    </nav>
    <%# ======= FLASH MESSAGES ========= %>
    <section class="alert__container">
        <% flash.each do |name, message|%>
        <div class="alert <%= name %>">
          <div class="<%= name %>">
            <%= message %>
          </div>
        </div>
        <% end %>
 
    </section>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
